#!/bin/sh /etc/rc.common
# Copyright (C) 2018 Lienol <admin@lienol.cn>

START=99

CONFIG=passwall_server
CONFIG_PATH=/var/etc/$CONFIG

config_t_get() {
	local index=0
	[ -n "$4" ] && index=$4
	local ret=$(uci get $CONFIG.@$1[$index].$2 2>/dev/null)
	echo ${ret:=$3}
}

gen_ssr_config_file() {
	config_get enable $1 enable
	[ "$enable" = "0" ] && return 0
	config_get remarks $1 remarks
	config_get port $1 port
	config_get password $1 password
	config_get encrypt_method $1 encrypt_method
	config_get protocol $1 protocol
	config_get protocol_param $1 protocol_param
	config_get obfs $1 obfs
	config_get obfs_param $1 obfs_param
	config_get timeout $1 timeout
	config_get fast_open $1 fast_open
	config_get udp_forward $1 udp_forward
	udp_param=""
	[ "$udp_forward" = "1" ] && udp_param="-u"
	
	cat <<-EOF >$CONFIG_PATH/ssr-server_$1.json
		{
		    "server": ["[::0]", "0.0.0.0"],
		    "server_port": $port,
		    "password": "$password",
		    "timeout": $timeout,
		    "method": "$encrypt_method",
		    "protocol": "$protocol",
		    "protocol_param": "$protocol_param",
		    "obfs": "$obfs",
		    "obfs_param": "$obfs_param",
		    "fast_open": $fast_open
		}
		EOF
		
	/usr/bin/ssr-server -c $CONFIG_PATH/ssr-server_$1.json $udp_param >/dev/null 2>&1 &
	iptables -t filter -A SSR-SERVER -p tcp --dport $port -j ACCEPT >/dev/null 2>&1 &
	[ "$udp_forward" = "1" ] && iptables -t filter -A SSR-SERVER -p udp --dport $port -j ACCEPT >/dev/null 2>&1 &
}

gen_v2ray_config_file() {
	config_get enable $1 enable
	[ "$enable" = "0" ] && return 0
	config_get port $1 port
	lua /usr/lib/lua/luci/model/cbi/passwall_server/genv2rayconfig.lua $1 > $CONFIG_PATH/v2ray-server_$1.json
	/usr/bin/v2ray/v2ray -config $CONFIG_PATH/v2ray-server_$1.json 2>&1 &
	iptables -t filter -A V2RAY-SERVER -p tcp --dport $port -j ACCEPT >/dev/null 2>&1 &
	iptables -t filter -A V2RAY-SERVER -p udp --dport $port -j ACCEPT >/dev/null 2>&1 &
}

start_ssr_server() {
	iptables -N SSR-SERVER >/dev/null 2>&1 &
	iptables -t filter -I INPUT -j SSR-SERVER >/dev/null 2>&1 &
	config_foreach gen_ssr_config_file ssr_servers
}

stop_ssr_server() {
	iptables -F SSR-SERVER >/dev/null 2>&1 &
	iptables -t filter -D INPUT -j SSR-SERVER >/dev/null 2>&1 &
	iptables -X SSR-SERVER >/dev/null 2>&1 &
	ps -w | grep "$CONFIG_PATH/ssr-server_" | grep -v "grep" | awk '{print $1}' | xargs kill -9
}

start_v2ray_server() {
	iptables -N V2RAY-SERVER >/dev/null 2>&1 &
	iptables -t filter -I INPUT -j V2RAY-SERVER >/dev/null 2>&1 &
	config_foreach gen_v2ray_config_file v2ray_servers
}

stop_v2ray_server() {
	iptables -F V2RAY-SERVER >/dev/null 2>&1 &
	iptables -t filter -D INPUT -j V2RAY-SERVER >/dev/null 2>&1 &
	iptables -X V2RAY-SERVER >/dev/null 2>&1 &
	ps -w | grep "$CONFIG_PATH/v2ray-server_" | grep -v "grep" | awk '{print $1}' | xargs kill -9
}

start() {
	stop
	config_load $CONFIG
	ssr_enable=$(config_t_get global ssr_enable 0)
	if [ "$ssr_enable" = "0" ];then
		stop_ssr_server
	else
		mkdir -p $CONFIG_PATH
		start_ssr_server
	fi
	
	v2ray_enable=$(config_t_get global v2ray_enable 0)
	if [ "$v2ray_enable" = "0" ];then
		stop_v2ray_server
	else
		mkdir -p $CONFIG_PATH
		start_v2ray_server
	fi
}

stop() {
	stop_ssr_server
	stop_v2ray_server
	rm -rf $CONFIG_PATH
}

restart() {
	stop
	sleep 1
	start
}